                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/subText12"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/subtractionTitle" />

            <ImageView
                android:id="@+id/subImage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/subText1"
                app:srcCompat="@drawable/sub_img2"
                tools:layout_editor_absoluteX="210dp" />

            <TextView
                android:id="@+id/subText13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/subText13"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/subtractionTitle" />

            <ImageView
                android:id="@+id/subImage3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/subText1"
                app:srcCompat="@drawable/sub_img3"
                tools:layout_editor_absoluteX="210dp" />

            <TextView
                android:id="@+id/subText14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
